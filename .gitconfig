[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	sup = submodule update --recursive --init
	sre = submodule foreach --recursive git reset --hard
	scl = submodule foreach --recursive git clean -fd
[github]
	user = mmontes11
[credential]
	helper = store
[core]
	# Use custom `.gitignore`
	excludesfile = ~/.gitignore
	editor = vi
    pager = delta
[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended
[interactive]
    diffFilter = delta --color-only
[pull]
	rebase = true
	ff = only
