{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "https://ollama.mmontes-internal.duckdns.org/v1"
      },
      "models": {
        "qwen3-coder:30b": {
          "name": "qwen3-coder:30b",
          "limit": {
            "context": 32768,
            "output": 65536
          }
        },
        "gpt-oss:20b": {
          "name": "gpt-oss:20b",
          "limit": {
            "context": 32768,
            "output": 65536
          }
        },
        "gpt-oss:20b-ctx128k": {
          "name": "gpt-oss:20b-ctx128k",
          "limit": {
            "context": 131072,
            "output": 65536
          }
        }
      }
    }
  },
  "mcp": {
    "kubernetes": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp-kubernetes.mmontes-internal.duckdns.org/mcp"
    },
    "grafana": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp-grafana.mmontes-internal.duckdns.org/mcp"
    },
    "photprism-mmontes": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp-photoprism-mmontes.mmontes-internal.duckdns.org/mcp"
    },
    "photprism-xiaowen": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp-photoprism-xiaowen.mmontes-internal.duckdns.org/mcp"
    }
  }
}